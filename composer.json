{
    "name": "thrive-cart-acme",
    "description": "ThriveCart ACME Project",
    "type": "project",
    "require": {
        "php": "^8.3",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "vimeo/psalm": "^5.18"
    },
    "autoload": {
        "psr-4": {
            "ThriveCartAcme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ThriveCartAcme\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "check": [
            "@phpstan",
            "@cs-check",
            "@psalm",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}